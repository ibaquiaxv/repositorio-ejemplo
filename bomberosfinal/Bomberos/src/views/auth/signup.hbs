
<div id="layoutSidenav" >
<div id="layoutSidenav_content">

<div class=" container p-2">
    {{!-- <a href="/profile" class="btn btn-danger">Regresar</a> --}}
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Registrar Usuarios</h3>
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Usuario" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="ContraseÃ±a" class="form-control" required>
                        </div>
                        <div class="form-group col-md-15" align="left">
                           
                             <label for="inputState" >Nombre Bombero</label>
                               <select name="Id_Bombero">
                                 {{#each bomberos}}
                                <option value={{IdBombero}}>{{Nombres}} {{Apellidos}}</option>
                                      {{/each}}
                                </select>
                            </div>

                             <div class="form-group col-md-15" align="left">
                               
                                <label for="inputState" >Rol del Bombero</label>
                                <select name="Id_Rol">
                                     {{#each roles}}
                                    <option value={{IdRol}}>{{TipoRol}}</option>
                                     {{/each}}
                                    </select>
                                </div>

                               

                      
                        <div class="form-group">
                            <button class="btn btn-success btn-block" id="obtener">
                                Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

